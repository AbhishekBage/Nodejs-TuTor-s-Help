<body>
      {{>StudentHeader}}

    
    <div class="container  p-3 shadow">
        <br>
        <br>
        <br>
        
        <div class="profile-head shadow p-3 mb-2 rounded"><b><h3>Ask Your Question</h3></b></div>
        <div class="Question-form shadow p-3 mb-2 rounded">
          <form action="/sendQuestion" method="post" enctype="multipart/form-data">
         <label> Select Subject</label>
         <select class="form-select form-control" name="subject" id="subject" >
        <option value="English">English</option>  
        <option value="Maths">Maths</option>
        <option value="Hindi">Hindi</option>
        <option value="Physics">Physics</option>
        <option value="Chemistry">Chemistry</option>
        <option value="Biology">Biology</option>
        <option value="History">History</option>
        <option value="Economics">Economics</option>
        <option value="Civics">Civics</option>
          </select>
          <br>
          <label>Write Question:</label>
          <input type="text" class="form-control" name="question" id="question">
          <br>
         
         
           <label for="exampleFormControlFile1">You can also Submit Image of Question:</label>
           <input type="file" class="form-control-file" id="exampleFormControlFile1" name="file"> 
            
          <center><button class="btn btn-success mt-5 mb-5">Submit</button></center>
          </form>
        </div>
        </div>
    

    
