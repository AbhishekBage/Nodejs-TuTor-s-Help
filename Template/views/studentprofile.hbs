      display:flex;
      flex-direction: row;
      flex-wrap:wrap;
      justify-content: flex-start;
      align-items: center;
     }
     ul{
      list-style-type: none;
    }
    .list{
       width:300px;
       font-size: larger;  
    }
    #about{
     margin-top: 20px;
     padding-left:20px;
     text-align: center;
     font-size: large;
     font-weight: 700;
     color:white;
     text-shadow: 2px 2px 8px black;
    
    }
    .copyright{
      background-color: rgb(36, 71, 230);
    }
    #thought{
      width:300px;
      padding:10px;
      color:darkblue;
      text-align: center;
      font-size: larger;
    }
